/* Carousel base class */
.carousel {
  height: 500px;
  margin-bottom: 60px;
  background: rgba(0,0,0,0.2);
}

/* Since positioning the image, we need to help out the caption */
.carousel-caption {
  text-align: left;
  z-index: 10;
  left: 5%;  
}
.carousel-caption {
text-align: left;
  z-index: 10;
  left: 5%; 
}


.lvjing{background:#ff0;opacity:0.9;}
/* Declare heights because of positioning of img element */
.carousel .item {
  height: 500px;
  /*background-color: #333;*/
}

.carousel-indicators{
	left:10%;
}


.carousel-inner > .item > img {
  position: absolute;
  top: 0;
  left: 0;
  min-width: 100%;
  height: 500px;
}
